{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": [
      "vite/client",
      "vitepress/client",
      "element-plus/global",
      "../packages/components.d.ts"
    ],
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "outDir": ".vitepress/dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".", // 用于解析非相对模块名称的基目录
    "paths": {
      "gi-component": [
        "../packages/index.ts"
      ],
      "@/*": [
        "../docs/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.vue",
  ],
  "exclude": [
    "node_modules",
    ".vitepress/dist"
  ]
}